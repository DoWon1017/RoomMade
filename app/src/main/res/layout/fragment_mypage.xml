    <?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/hanshin"
        android:layout_marginBottom="20dp"
        android:contentDescription="헤더 이미지" />


    <!-- 환영합니다 텍스트 -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="룸메이드에 오신 것을 환영합니다!"
        android:textColor="#9933CC"
        android:textSize="20sp" />

    <!-- 버튼을 담을 LinearLayout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 첫 번째 버튼 (정보 기입 및 수정) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:contentDescription="정보 기입 및 수정 버튼"
                android:scaleType="centerInside"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="정보 기입 및 수정"
                android:textColor="#0F0E0E"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 두 번째 버튼 (상벌점 확인 및 기입) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/penaltyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:contentDescription="상벌점 확인 및 기입 버튼"
                android:scaleType="centerInside"
                android:src="@drawable/score" />

            <TextView
                android:id="@+id/penaltyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상벌점 확인 및 기입"
                android:textColor="#040404"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 세 번째 버튼 (커뮤니티에 작성한 글) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/communityButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:contentDescription="커뮤니티에 작성한 글 버튼"
                android:scaleType="centerInside"
                android:src="@drawable/community" />

            <TextView
                android:id="@+id/communityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="커뮤니티에 작성한 글"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
