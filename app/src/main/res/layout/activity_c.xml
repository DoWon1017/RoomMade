<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 커뮤니티 타이틀 -->
    <TextView
        android:id="@+id/communityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티에 작성한 글"
        android:textSize="20sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center" />

    <!-- 배달음식 게시판 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/deliveryBoardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="배달음식 게시판"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/deliveryBoardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조회하기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#9933CC"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- 운동 게시판 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/sportsBoardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="운동 게시판"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/sportsBoardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조회하기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#9933CC"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- 커뮤니티 게시판 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/communityBoardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="커뮤니티"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/communityBoardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조회하기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#9933CC"
            android:padding="10dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- RecyclerView 추가 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:visibility="gone" /> <!-- 처음에는 보이지 않도록 설정 -->

    <!-- 뒤로가기 버튼 -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9933CC"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />
</LinearLayout>
