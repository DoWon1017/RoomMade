<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="133dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <LinearLayout
            android:id="@+id/apply_layout"
            android:layout_width="136dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_singin_foreground" />

            <TextView
                android:id="@+id/apply_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="        기숙사 신청" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="136dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_star_foreground" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="        룸메이트 평점" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_layout"
            android:layout_width="138dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_compliance_foreground" />

            <TextView
                android:id="@+id/check_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="           합격 확인" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="411dp"
        android:layout_height="86dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Room Made"
            android:textColor="#9370db"
            android:textSize="20sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>