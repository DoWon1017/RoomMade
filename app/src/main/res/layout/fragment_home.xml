<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@color/bottom_menu_background">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Room Made"
                android:textColor="#9370db"
                android:textSize="20sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/sungbin" />

        <TextView
            android:id="@+id/welcomeText2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="룸메이드에 오신 것을 환영합니다!"
            android:textColor="#9370db"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/apply_layout"
                        android:layout_width="112dp"
                        android:layout_height="130dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/apply"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:srcCompat="@mipmap/ic_singin_foreground" />

                        <TextView
                            android:id="@+id/apply_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="      기숙사 신청" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rating_layout"
                        android:layout_width="112dp"
                        android:layout_height="130dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/rating"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:srcCompat="@mipmap/ic_star_foreground" />

                        <TextView
                            android:id="@+id/rating_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="     룸메이트 평점" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/check_layout"
                        android:layout_width="112dp"
                        android:layout_height="130dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/check"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:srcCompat="@mipmap/ic_compliance_foreground" />

                        <TextView
                            android:id="@+id/check_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="         합격 확인" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/roommate_layout"
                        android:layout_width="112dp"
                        android:layout_height="130dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/roommate"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:srcCompat="@mipmap/ic_roommate_foreground" />

                        <TextView
                            android:id="@+id/roommate_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="     룸메이트 매칭" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_width="450dp"
            android:layout_height="120dp"

            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="115dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_notification_foreground" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="210dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="4dp"
                    android:text="공지사항 확인하러가기"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.550" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="52dp"
                    android:layout_height="46dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.303"
                    app:layout_constraintStart_toEndOf="@+id/notification_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_arrow_forward" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>