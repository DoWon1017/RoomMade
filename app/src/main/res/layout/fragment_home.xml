<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="450dp"
        android:layout_height="86dp"
        android:background="@color/bottom_menu_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Room Made"
            android:textColor="#9370db"
            android:textSize="20sp" />
    </FrameLayout>

    <HorizontalScrollView

        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/apply_layout"
                android:layout_width="136dp"
                android:layout_height="130dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_singin_foreground" />

                <TextView
                    android:id="@+id/apply_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="        기숙사 신청" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating_layout"
                android:layout_width="136dp"
                android:layout_height="130dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_star_foreground" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="        룸메이트 평점" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_layout"
                android:layout_width="136dp"
                android:layout_height="130dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_compliance_foreground" />

                <TextView
                    android:id="@+id/check_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="            합격 확인" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roommate_layout"
                android:layout_width="136dp"
                android:layout_height="130dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/roommate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_roommate_foreground" />

                <TextView
                    android:id="@+id/roommate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="        룸메이트 매칭" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/notification_layout"
        android:layout_width="450dp"
        android:layout_height="136dp"
        android:layout_marginTop="16dp"

        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="135dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_notification_foreground" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="170dp"
                android:layout_height="46dp"
                android:layout_marginStart="4dp"
                android:text="공지사항 확인하기"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.550" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="52dp"
                android:layout_height="46dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.217"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_arrow_forward" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>